<?xml version="1.0" encoding="ISO-8859-15" ?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <!-- Identification du projet -->
    <groupId>com.agrica.socle.ppa</groupId>
    <artifactId>ppa</artifactId>
    <version>0.1.6</version>

    <packaging>pom</packaging>

    <name>POM Parent Agrica</name>

    <organization>
        <name>Agrica</name>
        <url>https://www.groupagrica.com/</url>
    </organization>

    <inceptionYear>2016</inceptionYear>

    <!-- pre-requis -->
    <prerequisites>
        <maven>${maven.version}</maven>
    </prerequisites>

    <!-- Elements pour le deploiement dans les repositories Generali -->
    <distributionManagement>
        <repository>
            <id>nexus</id>
            <name>Release Repository</name>
            <url>${dist.releases.url}</url>
        </repository>
        <snapshotRepository>
            <id>nexus</id>
            <name>Snapshots Repository</name>
            <url>${dist.snapshots.url}</url>
        </snapshotRepository>
    </distributionManagement>


    <scm>
        <connection>scm:git:ssh://gitlab-dei:socle/ppa.git</connection>
        <developerConnection>scm:git:git@gitlab-dei:socle/ppa.git</developerConnection>
        <url>http://gitlab-dei/socle/ppa</url>
        <tag>ppa-0.1.6</tag>
    </scm>


