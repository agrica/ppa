<?xml version="1.0" encoding="ISO-8859-15" ?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <!-- Identification du projet -->
    <groupId>com.agrica.socle.ppa</groupId>
    <artifactId>ppa</artifactId>
    <version>0.0.4</version>

    <packaging>pom</packaging>

    <name>POM Parent Agrica</name>

    <organization>
        <name>Agrica</name>
        <url>https://www.groupagrica.com/</url>
    </organization>

    <inceptionYear>2016</inceptionYear>

    <!-- pre-requis -->
    <prerequisites>
        <maven>${maven.version}</maven>
    </prerequisites>

    <!-- Elements pour le deploiement dans les repositories Generali -->
    <distributionManagement>
        <repository>
            <id>nexus</id>
            <name>Release Repository</name>
            <url>${dist.releases.url}</url>
        </repository>
        <snapshotRepository>
            <id>nexus</id>
            <name>Snapshots Repository</name>
            <url>${dist.snapshots.url}</url>
        </snapshotRepository>
    </distributionManagement>


    <scm>
        <connection>scm:git:ssh://gitlab-dei:socle/ppa.git</connection>
        <developerConnection>scm:git:git@gitlab-dei:socle/ppa.git</developerConnection>
        <url>http://gitlab-dei/socle/ppa</url>
        <tag>ppa-0.0.4</tag>
    </scm>


    <!--<ciManagement>-->
    <!--<system>Jenkins</system>-->
    <!--<url>${usine.url.ci}/job/${code.cmdb}-${project.artifactId}-trunk-ci</url>-->
    <!--</ciManagement>-->

    <issueManagement>
        <system>JIRA</system>
        <url>${usine.url.bugtracker.jira}/PPG</url>
    </issueManagement>

    <!-- A redefinir au besoin par les projets -->
    <properties>
        <!-- L'encoding des sources -->
        <!--<source.encoding>UTF-8</source.encoding>-->
        <source.encoding>ISO-8859-15</source.encoding>
        <!-- Cette propriete est utilisee au fur et a mesure par defaut par tous les plugins et sera integree dans une future version du POM -->
        <project.build.sourceEncoding>${source.encoding}</project.build.sourceEncoding>
        <!-- Cette propriete est utilisee au fur et a mesure par defaut par tous les plugins et sera integree dans une future version du POM -->
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <maven.build.timestamp.format>dd/MM/yyyy HH:mm:ss 'GMT'</maven.build.timestamp.format>
        <build.date>${maven.build.timestamp}</build.date>

        <!-- La version de maven -->
        <maven.version>3.3.9</maven.version>
        <!-- Le niveau de compatibilite des sources du projet -->
        <compile.source>1.8</compile.source>
        <!-- Le niveau de compatibilite des binaires du projet -->
        <compile.target>1.8</compile.target>
        <!-- Les options a passer a la commande forkee de maven pour les tests -->
        <!--<surefire.argLine>${env.MAVEN_OPTS}</surefire.argLine>-->

        <!-- ================================= -->
        <!-- Usine                             -->
        <!-- ================================= -->
        <!--<maven.build.timestamp.format>yyyy-MM-dd'T'HH:mm:ssZ</maven.build.timestamp.format>-->
        <!--<build.date>${maven.build.timestamp}</build.date>-->

        <!-- Les URLs pour le dï¿½ploiement des artifacts -->
        <dist.snapshots.url>http://nexus/content/repositories/snapshots/</dist.snapshots.url>
        <dist.releases.url>http://nexus/content/repositories/releases/</dist.releases.url>

        <!-- Les URLs pour les applications de l'USINE DE DEV JAVA -->
        <usine.url.bugtracker.jira>http://jira/browse</usine.url.bugtracker.jira>
        <usine.url.sources.svn-groupe>http://lima/svn</usine.url.sources.svn-groupe>
        <usine.url.ci.jenkins>http://jenkins</usine.url.ci.jenkins>
        <usine.url.ci>${usine.url.ci.jenkins}</usine.url.ci>
        <usine.url.sonar>http://sonar</usine.url.sonar>

        <!-- ================================= -->
        <!-- Parametrage buildnumber           -->
        <!-- ================================= -->
        <buildnumber.revisionOnScmFailure>0</buildnumber.revisionOnScmFailure>
        <buildnumber.doCheck>false</buildnumber.doCheck>
        <buildnumber.doUpdate>false</buildnumber.doUpdate>


        <!-- ================================= -->
        <!-- Les versions de Plugins Maven -->
        <!-- ================================= -->
        <maven-release-plugin.version>2.5.3</maven-release-plugin.version>

        <maven-assembly-plugin.version>2.6</maven-assembly-plugin.version>
        <iterator-maven-plugin.version>0.4</iterator-maven-plugin.version>
        <build-helper-maven-plugin.version>1.11</build-helper-maven-plugin.version>

        <maven-antrun-plugin.version>1.8</maven-antrun-plugin.version>
        <buildnumber-maven-plugin.version>1.4</buildnumber-maven-plugin.version>
        <!-- Sonar -->
        <sonar-maven-plugin.version>3.0.2</sonar-maven-plugin.version>
        <sonar-mariadb-java-client.version>1.4.6</sonar-mariadb-java-client.version>
        <!-- SCM tools -->

        <maven-scm-provider-svnjava.version>2.1.1</maven-scm-provider-svnjava.version>
        <maven.svnkit.version>1.7.11</maven.svnkit.version>

    </properties>

    <build>
        <pluginManagement>
            <!-- Versions of plugins to use, to be sure that a new release automatically installed will not break an existing build -->
            <plugins>
                <!-- ************************* -->
                <!-- Tools                     -->
                <!-- ************************ -->
                <!-- Release -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-release-plugin</artifactId>
                    <version>${maven-release-plugin.version}</version>
                    <configuration>
                        <!-- During release:perform, enable the "release" profile -->
                        <releaseProfiles>release</releaseProfiles>
                        <!--<goals>sonar:sonar</goals>-->
                    </configuration>
                </plugin>
                <!-- Build Helper -->
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>build-helper-maven-plugin</artifactId>
                    <version>${build-helper-maven-plugin.version}</version>
                </plugin>
                <!-- Assembly -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <version>${maven-assembly-plugin.version}</version>
                    <configuration>
                        <appendAssemblyId>true</appendAssemblyId>
                        <tarLongFileMode>gnu</tarLongFileMode>
                    </configuration>
                </plugin>
                <!-- Iterator -->
                <plugin>
                    <groupId>com.soebes.maven.plugins</groupId>
                    <artifactId>iterator-maven-plugin</artifactId>
                    <version>${iterator-maven-plugin.version}</version>
                </plugin>
                <!-- Buildnumber -->
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>buildnumber-maven-plugin</artifactId>
                    <version>${buildnumber-maven-plugin.version}</version>
                    <configuration>
                        <revisionOnScmFailure>${buildnumber.revisionOnScmFailure}</revisionOnScmFailure>
                        <doCheck>${buildnumber.doCheck}</doCheck>
                        <doUpdate>${buildnumber.doUpdate}</doUpdate>
                    </configuration>
                </plugin>

                <!-- ************************* -->
                <!-- Plugins pour Sonar        -->
                <!-- ************************ -->
                <plugin>
                    <groupId>org.sonarsource.scanner.maven</groupId>
                    <artifactId>sonar-maven-plugin</artifactId>
                    <version>${sonar-maven-plugin.version}</version>
                    <dependencies>
                        <dependency>
                            <groupId>org.mariadb.jdbc</groupId>
                            <artifactId>mariadb-java-client</artifactId>
                            <version>${sonar-mariadb-java-client.version}</version>
                        </dependency>
                    </dependencies>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>

            <!-- Build Number -->
            <!--<plugin>-->
            <!--<groupId>org.codehaus.mojo</groupId>-->
            <!--<artifactId>buildnumber-maven-plugin</artifactId>-->
