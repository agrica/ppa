        <!-- SCM tools -->
        <maven-scm-provider-svnjava.version>2.1.2</maven-scm-provider-svnjava.version> <!-- 2.1.1 -->
        <maven.svnkit.version>1.7.11</maven.svnkit.version>

        <docker-maven-plugin.fabric8.version>0.26.0</docker-maven-plugin.fabric8.version>
        <jgitflow-maven-plugin.version>1.0-m5.1</jgitflow-maven-plugin.version>

        <!-- Changelog -->
        <gitlog-maven-plugin.version>1.13.7</gitlog-maven-plugin.version>
        <git-changelog-maven-plugin.version>1.55</git-changelog-maven-plugin.version>



