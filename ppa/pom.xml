        <!--<surefire.argLine>${env.MAVEN_OPTS}</surefire.argLine>-->

        <!-- Sonar -->
        <sonar.sources>${project.build.sourceDirectory}</sonar.sources>
        <sonar.host.url>http://sonar.agrica.loc</sonar.host.url>

